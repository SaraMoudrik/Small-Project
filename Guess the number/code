import random

num = random.randint(1,10)
texte = 0

tent = 0
tent_max = 5

while texte != num:
    if tent >= tent_max:
        print("Vous avez perdu, le nombre est: ", num)
        break
    texte = int(input("Entrez votre nombre [1-10] "))
    if texte == num:
        print("Bravo, vous avez trouv√© le nombre")
    elif texte < num:
        print("C'est plus")
    elif texte > num:
        print("C'est moins")
    
    tent += 1
